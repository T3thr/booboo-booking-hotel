# ===========================================
# NEON DATABASE CONFIGURATION
# ===========================================
# Get your connection string from: https://console.neon.tech
# Format: postgresql://[user]:[password]@[host]/[database]?sslmode=require

# Local Development (Neon Database)
DATABASE_URL="postgresql://username:password@ep-xxx-xxx.region.aws.neon.tech/neondb?sslmode=require"

# Direct connection (for migrations)
DIRECT_URL="postgresql://username:password@ep-xxx-xxx.region.aws.neon.tech/neondb?sslmode=require"

# ===========================================
# BACKEND API CONFIGURATION
# ===========================================
NEXT_PUBLIC_API_URL="http://localhost:8080"

# ===========================================
# NEXTAUTH CONFIGURATION
# ===========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# ===========================================
# BACKEND ENVIRONMENT VARIABLES
# ===========================================
# These are used by the Go backend
PORT=8080
GIN_MODE=debug

# Database Configuration (parsed from DATABASE_URL)
DB_HOST=ep-xxx-xxx.region.aws.neon.tech
DB_PORT=5432
DB_USER=username
DB_PASSWORD=password
DB_NAME=neondb
DB_SSLMODE=require

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production

# CORS Configuration
FRONTEND_URL=http://localhost:3000
