# JWT Secret - Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_SECRET_HERE

# Server Port
PORT=8080

# Gin Mode (release for production)
GIN_MODE=release

# Environment
ENVIRONMENT=production

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis:6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE

# ============================================
# Frontend Configuration
# ============================================
# Public API URL (accessible from browser)
NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api

# NextAuth URL (your frontend domain)
NEXTAUTH_URL=https://yourdomain.com

# NextAuth Secret - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=CHANGE_ME_GENERATE_RANDOM_SECRET_HERE

# Backend URL for server-side calls (internal)
BACKEND_URL=http://backend:8080

# Node Environment
NODE_ENV=production

# ============================================
# Email Configuration (for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ============================================
# Monitoring & Logging
# ============================================
# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Sentry DSN (optional, for error tracking)
SENTRY_DSN=

# ============================================
# Backup Configuration
# ============================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# S3 Backup Configuration (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=hotel-booking-backups
AWS_REGION=us-east-1

# ============================================
# Security
# ============================================
# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# ============================================
# SSL/TLS Configuration
# ============================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ============================================
# Domain Configuration
# ============================================
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com
