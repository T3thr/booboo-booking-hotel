{
  "version": 2,
  "name": "hotel-booking-backend",
  "builds": [
    {
      "src": "cmd/server/main.go",
      "use": "@vercel/go"
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "cmd/server/main.go"
    },
    {
      "src": "/api/(.*)",
      "dest": "cmd/server/main.go"
    },
    {
      "src": "/(.*)",
      "dest": "cmd/server/main.go"
    }
  ],
  "env": {
    "GO_ENV": "production",
    "GIN_MODE": "release",
    "ENVIRONMENT": "production"
  },
  "regions": ["sin1"],
  "functions": {
    "cmd/server/main.go": {
      "maxDuration": 30
    }
  }
}
