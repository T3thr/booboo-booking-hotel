# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=8080
GIN_MODE=debug

# ===========================================
# DATABASE CONFIGURATION (NEON POSTGRESQL)
# ===========================================
# Get your connection string from: https://console.neon.tech
# Format: postgresql://[user]:[password]@[host]/[database]?sslmode=require

# For Local Development with Neon
DB_HOST=ep-xxx-xxx.region.aws.neon.tech
DB_PORT=5432
DB_USER=your_neon_username
DB_PASSWORD=your_neon_password
DB_NAME=neondb
DB_SSLMODE=require

# Full Database URL (alternative format)
DATABASE_URL=postgresql://your_neon_username:your_neon_password@ep-xxx-xxx.region.aws.neon.tech/neondb?sslmode=require

# Database Pool Configuration
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# ===========================================
# JWT & AUTHENTICATION
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production-minimum-32-characters
JWT_EXPIRATION=24h

# ===========================================
# CORS CONFIGURATION
# ===========================================
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# REDIS CACHE (OPTIONAL)
# ===========================================
# Leave empty to run without cache
# Format: redis://[password]@[host]:[port]/[db]
REDIS_URL=
# Example: redis://:password@localhost:6379/0

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# NIGHT AUDIT JOB
# ===========================================
NIGHT_AUDIT_ENABLED=true
NIGHT_AUDIT_TIME=00:00

# ===========================================
# HOLD CLEANUP JOB
# ===========================================
HOLD_CLEANUP_ENABLED=true
HOLD_CLEANUP_INTERVAL=5m
HOLD_TIMEOUT=15m

# ===========================================
# ENVIRONMENT
# ===========================================
ENVIRONMENT=development
