# ===========================================
# LOCAL DEVELOPMENT ENVIRONMENT - GO BACKEND
# ===========================================
# This configuration is for local development with Neon PostgreSQL

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=8080
GIN_MODE=debug
ENVIRONMENT=development

# ===========================================
# DATABASE CONFIGURATION (NEON POSTGRESQL)
# ===========================================
# Get your connection string from: https://console.neon.tech
# Use the "Direct connection" string for local development

DB_HOST=ep-xxx-xxx.region.aws.neon.tech
DB_PORT=5432
DB_USER=your_neon_username
DB_PASSWORD=your_neon_password
DB_NAME=neondb
DB_SSLMODE=require

# Full Database URL (Neon Direct Connection)
DATABASE_URL=postgresql://your_neon_username:your_neon_password@ep-xxx-xxx.region.aws.neon.tech/neondb?sslmode=require

# Database Pool Configuration (Local Development)
DB_MAX_OPEN_CONNS=10
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# ===========================================
# JWT & AUTHENTICATION
# ===========================================
# For local development, you can use a simple secret
JWT_SECRET=local-development-secret-key-change-in-production
JWT_EXPIRATION=24h

# ===========================================
# CORS CONFIGURATION
# ===========================================
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# ===========================================
# REDIS CACHE (OPTIONAL)
# ===========================================
# Leave empty to run without cache (recommended for local dev)
REDIS_URL=
# If you want to use local Redis: redis://:password@localhost:6379/0

# ===========================================
# RATE LIMITING (DISABLED FOR LOCAL DEV)
# ===========================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=1m

# ===========================================
# LOGGING (VERBOSE FOR LOCAL DEV)
# ===========================================
LOG_LEVEL=debug
LOG_FORMAT=text

# ===========================================
# NIGHT AUDIT JOB (DISABLED FOR LOCAL DEV)
# ===========================================
NIGHT_AUDIT_ENABLED=false
NIGHT_AUDIT_TIME=00:00

# ===========================================
# HOLD CLEANUP JOB
# ===========================================
HOLD_CLEANUP_ENABLED=true
HOLD_CLEANUP_INTERVAL=5m
HOLD_TIMEOUT=15m

# ===========================================
# MONITORING & HEALTH CHECK
# ===========================================
ENABLE_METRICS=false
HEALTH_CHECK_PATH=/health

# ===========================================
# EMAIL CONFIGURATION (OPTIONAL - NOT NEEDED FOR LOCAL)
# ===========================================
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_TLS=false

# ===========================================
# ERROR TRACKING (DISABLED FOR LOCAL DEV)
# ===========================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
